---

const lang = Astro.params.lang || 'en';
import '../assets/css/global.css'
import "../assets/css/base.css"
import "../assets/css/typography.css"
import "../assets/css/layout.css"
import "../assets/css/buttons.css"

import { Font } from 'astro:assets';

import Image from "astro/components/Image.astro"
import bg_image from "../assets/theme-images/hero-image.jpg"

import global_settings_en from '../data/en/global_settings.json';
import global_settings_it from '../data/it/global_settings.json';
const global_settings = lang === 'it' ? global_settings_it : global_settings_en;

import FooterMain from "../components/FooterMain.astro"
import HeaderMain from "../components/HeaderMain.astro"

const { title, description } = Astro.props

---

<html lang={lang}>

  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width" />

    <title>{ title ?? global_settings.title }</title>

    <link rel="icon" type="image/svg+xml" href="/scoutforall/favicon.svg" />
    <link rel="manifest" href="/scoutforall/manifest.json" />

    <meta name="description" content={ description ?? global_settings.description } />
    <meta name="theme-color" content={ global_settings.theme_color } />

    <meta property="og:title" content={ title ?? global_settings.title } />
    <meta property="og:description" content={ description ?? global_settings.description } />

    <Font cssVariable="--font-inter" preload />
    <Font cssVariable="--font-inter-display" preload />

    <link
      rel="alternate"
      hreflang="en"
      href="https://naighes.github.io/scoutforall/"
    />
    <link
      rel="alternate"
      hreflang="it"
      href="https://naighes.github.io/scoutforall/it/"
    />
    <link
      rel="alternate"
      hreflang="x-default"
      href="https://naighes.github.io/scoutforall/"
    />
    <link
      rel="canonical"
      href={`https://naighes.github.io/scoutforall/${lang === 'en' ? '' : lang + '/'}`}
    />
    <link rel="sitemap" href="/scoutforall/sitemap-index.xml" />

    <script type="application/ld+json">
      {JSON.stringify({
        "@context": "https://schema.org",
        "@type": "SoftwareApplication",
        "name": "scout4all",
        "applicationCategory": "Sports Analytics",
        "url": "https://naighes.github.io/scoutforall/",
        "inLanguage": lang,
        "description": description ?? global_settings.description,
        "creator": {
          "@type": "Person",
          "name": "Nicola Baldi",
        },
        "publisher": {
          "@type": "Organization",
          "name": "scout4all project",
          "url": "https://naighes.github.io/scoutforall/",
        },
      })}
    </script>
    <script>
      if (location.pathname === '/' && !location.search && !location.hash) {
        const userLang = navigator.language || navigator.userLanguage;
        if (userLang.startsWith('it')) {
          window.location.replace('/scoutforall/it/');
        }
      }
    </script>
  </head>

  <body id="top">

    <!-- Skip link -->
    <a class="fixed -top-20 focus-visible:top-0 p-3 bg-black/90 transition-all duration-300" href="#main">Skip to content</a>

    <!-- bg image -->
    <Image src={ bg_image } alt="" format="avif" height={1080} width={1920} class="absolute min-h-svh object-cover inset-0 bottom-auto -z-1 w-full h-auto opacity-20 mask-b-from-50%" loading="eager" />

    <!-- Header -->
    <HeaderMain settings={ global_settings } />

    <!-- Main slot -->
    <main id="main">
      <slot />
    </main>

    <!-- Footer -->
    <FooterMain settings={ global_settings } />

  </body>
</html>
